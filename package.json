{
  "name": "@detra-lab/eslint-config",
  "version": "0.1.0",
  "description": "ESLint config for JavaScript, TypeScript, and React. Modular and opinionated.",
  "license": "MIT",
  "author": {
    "name": "Detra",
    "email": "detra.lab@pm.me",
    "homepage": "https://github.com/detra-lab"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/detra-lab/eslint-config.git"
  },
  "bugs": {
    "url": "https://github.com/detra-lab/eslint-config/issues"
  },
  "engines": {
    "node": "16.x || 18.x",
    "pnpm": ">=8"
  },
  "publishConfig": {
    "access": "public"
  },
  "main": "index.js",
  "types": "types/index.d.ts",
  "files": [
    "/index.js",
    "/javascript.js",
    "/typescript.js",
    "/react.js",
    "/constants.js",
    "/types/"
  ],
  "prettier": "@detra-lab/prettier-config",
  "scripts": {
    "check:tsc": "tsc --noEmit",
    "check:src": "eslint ./src --ext .js,.ts",
    "check": "pnpm build && pnpm check:tsc && pnpm check:src",
    "eslint": "eslint ./tests/.",
    "test:js": "pnpm eslint -c ./tests/.eslintrc.es.js --ext .js,.jsx",
    "test:ts": "pnpm eslint -c ./tests/.eslintrc.ts.js --ext .ts,.tsx",
    "test": "pnpm build && pnpm test:js && pnpm test:ts",
    "build": "del ./*.js ./types && tsc",
    "release": "pnpm build && changeset publish"
  },
  "devDependencies": {
    "@changesets/cli": "^2.26.0",
    "@detra-lab/prettier-config": "^0.1.0",
    "@detra-lab/tsc": "^0.1.0",
    "@evilmartians/lefthook": "^1.3.0",
    "@types/node": "^16.0.0",
    "del-cli": "^5.0.0",
    "eslint": "^8.39.0",
    "prettier": "^2.8.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@babel/core": "7.21.5",
    "@babel/eslint-parser": "7.21.3",
    "@typescript-eslint/eslint-plugin": "5.59.1",
    "@typescript-eslint/parser": "5.59.1",
    "eslint-plugin-import": "2.27.5",
    "eslint-plugin-jsdoc": "43.1.1",
    "eslint-plugin-jsx-a11y": "6.7.1",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-react": "7.32.2",
    "eslint-plugin-react-hooks": "4.6.0"
  },
  "peerDependencies": {
    "eslint": "^8.0.0",
    "typescript": "^5.0.0"
  },
  "peerDependenciesMeta": {
    "typescript": {
      "optional": true
    }
  },
  "keywords": [
    "linter",
    "tslint",
    "eslint",
    "eslint-config"
  ]
}
